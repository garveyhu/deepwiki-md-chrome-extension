{
  "manifest_version": 3,
  "name": "DeepWiki to Markdown Enhanced",
  "version": "0.1.0",
  "description": "Enhanced DeepWiki to Markdown converter with on-page buttons, translation support, and hierarchical structure preservation",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://deepwiki.com/*",
    "https://translate.google.com/*",
    "https://translate.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://deepwiki.com/*"],
      "js": [
        "lib/jszip.min.js",
        "content/preferences.js",
        "content/diagram-flow.js",
        "content.js",
        "content/messages.js"
      ],
      "run_at": "document_end",
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/jszip.min.js"],
      "matches": ["https://deepwiki.com/*"]
    }
  ]
}
